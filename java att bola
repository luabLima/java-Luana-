package teste;

class Bola { 
    private String cor; 
    
    public Bola(String cor) {
        this.cor = cor;
    }
   
    public String getCor() {
        return cor;
    }

    public void setCor(String cor) {
        this.cor = cor;
    }

    public static void main(String[] args) {
       
        Bola bola1 = new Bola("rosa"); 
        System.out.println("Cor da bola: " + bola1.getCor());
        
        
        bola1.setCor("azul");
        System.out.println("Nova cor da bola:" + bola1.getCor());
    }
}

